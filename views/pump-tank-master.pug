                            .col-md-6
                                .form-group
                                    label(for='editRelationStartDate') Effective From
                                        span.text-danger *
                                    input#editRelationStartDate.form-control(
                                        type='date',
                                        required
                                    )
                                    small.form-text.text-muted Today or past date only.
