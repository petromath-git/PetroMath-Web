doctype html
html(lang='en')
    head
        meta(charset='UTF-8')
        meta(name='viewport' content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no')
        title= title
        link(rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css')
        style.
            * {
                margin: 0;
                padding: 0;
                box-sizing: border-box;
            }
            body {
                background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
                min-height: 100vh;
                display: flex;
                justify-content: center;
                align-items: center;
                padding: 20px;
                font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, sans-serif;
            }
            .message-container {
                background: white;
                padding: 40px 25px;
                border-radius: 20px;
                text-align: center;
                max-width: 400px;
                width: 100%;
                box-shadow: 0 10px 40px rgba(0,0,0,0.3);
            }
            .campaign-header {
                background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
                color: white;
                padding: 15px;
                border-radius: 12px;
                margin-bottom: 25px;
            }
            .campaign-name {
                font-size: 18px;
                font-weight: 600;
                margin: 0;
            }
            .message-icon {
                font-size: 80px;
                color: #ffc107;
                margin-bottom: 20px;
            }
            .message-title {
                font-size: 22px;
                font-weight: 700;
                color: #2c3e50;
                margin-bottom: 15px;
            }
            .message-text {
                font-size: 16px;
                color: #495057;
                line-height: 1.6;
                margin-bottom: 20px;
            }
            .campaign-dates {
                background: #f8f9fa;
                padding: 15px;
                border-radius: 10px;
                font-size: 14px;
                color: #495057;
            }
            .campaign-dates strong {
                display: block;
                margin-bottom: 5px;
                color: #2c3e50;
            }
    
    body
        .message-container
            .campaign-header
                .campaign-name= campaign.name
            
            i.fas.fa-calendar-times.message-icon
            .message-title No Question Today
            .message-text= message
            
            .campaign-dates
                strong
                    i.fas.fa-calendar-alt
                    |  Campaign Duration
                div From: #{moment(campaign.start_date).format('DD MMM YYYY')}
                div To: #{moment(campaign.end_date).format('DD MMM YYYY')}